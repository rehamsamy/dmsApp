<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical"

    >
    <ImageView
        android:contentDescription="@string/upload_image"

        android:visibility="gone"
        android:id="@+id/image_show"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/roundedbot"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/little_margin"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center"
            android:id="@+id/med_name"
            android:layout_weight="80"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/medical_name"
            android:textColor="@color/colormain"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="casual"
            />
        <ImageView
            android:contentDescription="@string/upload_image"

            android:id="@+id/active_icon"
            android:layout_width="0dp"
            android:src="@drawable/unlock"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            />
        </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/med_dosage"
            android:textColor="@color/colormain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/CAPSULES"
            android:layout_weight="25"
            android:fontFamily="casual"
            />
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"

            android:background="@color/colormain"
            />
        <TextView
            android:id="@+id/med_num_unit"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:padding="1dp"
            android:fontFamily="casual"

            android:textColor="@color/colormain"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Unit"
            android:layout_weight="15"
            android:fontFamily="casual"

            android:textColor="@color/colormain"
            />
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/colormain"
            />
        <TextView
            android:id="@+id/med_pack_size"
            android:layout_width="0dp"
            android:fontFamily="casual"

            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:textColor="@color/colormain"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/size"
            android:fontFamily="casual"

            android:layout_weight="12"
            android:textColor="@color/colormain"
            />

        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/colormain"
            />
        <TextView
            android:id="@+id/med_duration"
            android:layout_width="0dp"

            android:fontFamily="casual"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:textColor="@color/colormain"
            />
        <TextView
            android:fontFamily="casual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/days"
            android:layout_weight="15"
            android:textColor="@color/colormain"
            />

    </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_excess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_available_this_month"
            android:fontFamily="casual"
            android:textColor="@color/colorAccentRed"


            />
    </LinearLayout>

</RelativeLayout>