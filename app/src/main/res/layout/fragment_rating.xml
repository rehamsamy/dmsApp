<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/app_rate_dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:gravity="center_horizontal"
        android:text="@string/please_rate_our_messenger"
        android:textColor="@color/color_white"/>

    <RatingBar
        android:layout_gravity="center"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tv_optional"
        android:layout_below="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/optional"
        android:paddingStart="@dimen/mini_padding"
        android:paddingTop="@dimen/mini_padding"
        android:textColor="@color/yellow"
        />


    <EditText
        android:layout_below="@+id/tv_optional"
        android:id="@+id/et_any_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:background="@drawable/edit_text_background"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:lines="5"
        android:padding="@dimen/margin_pre_medium"
        tools:ignore="LabelFor"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/color_white"/>


    <Button
        android:id="@+id/btn_add"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_any_comment"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/mini_margin"
        android:paddingBottom="@dimen/mini_margin"
        android:paddingEnd="@dimen/little_margin"
        android:paddingStart="@dimen/little_margin"
        android:paddingTop="@dimen/mini_margin"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppRatingDialog.NoteLabel"
        android:textColor="@color/yellow"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

</LinearLayout>