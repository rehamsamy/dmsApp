<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_id"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:maxHeight="120dp"
                android:minHeight="120dp"
                android:maxWidth="120dp"
                android:minWidth="120dp"
                android:src="@drawable/rosheta"

                />

        </FrameLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_marginTop="8dp">
             <TextView
                 android:id="@+id/order_name"
                 android:padding="4dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/text_size_medium"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:text="# 12563"
                 />
             <TextView
                 android:id="@+id/state"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="18dp"
                 android:text="Accepted"
                 android:textColor="@color/color_white"
                 android:padding="4dp"
                 android:background="@drawable/accept_chip"
                 android:layout_margin="4dp"
                 android:layout_gravity="right"

                 />
         </LinearLayout>

        <TextView
            android:id="@+id/pharmacy_name"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="center"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="Elezaby"
            android:drawableLeft="@drawable/ic_pharmacy_icon"/>
        <TextView
            android:id="@+id/branch_name"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="center"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="branch One"
            android:drawableLeft="@drawable/ic_add_location"/>

        <TextView
            android:id="@+id/card_id"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="center"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="1000-01-147-1"
            android:drawableLeft="@drawable/card_id"/>

        <TextView
            android:id="@+id/rder_date"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="center"
            android:gravity="left"
            android:drawablePadding="10dp"
            android:text="10/5/2017"

            android:drawableLeft="@drawable/ic_date_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/notesHeader"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:layout_gravity="center"
                android:gravity="left"
                android:drawablePadding="10dp"
                android:text="Notes"
                android:drawableLeft="@drawable/ic_date_24dp"
                />
            <ImageButton
                android:id="@+id/arrowDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down_black"
                android:background="@null"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/arrowUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_up"
                android:background="@null"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/notes"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="my name is amr moha my name is amr mohamedmy name is amr mohamed."
            android:visibility="gone"

            />


    </LinearLayout>


</android.support.v7.widget.CardView>