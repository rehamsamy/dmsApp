<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_toolbar"
        />


    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:ms_arrow_tint="@color/colorPrimary"
        app:ms_dropdown_max_height="350dp"
        android:textStyle="bold"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/margin_medium"
        android:id="@+id/typeSpinner" />

    <LinearLayout
        android:id="@+id/sendContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/typeSpinner"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_medium">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            android:visibility="gone"
            android:layout_weight="2"
            />

        <LinearLayout
            android:id="@+id/send_form_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="20dp">
            <EditText
                android:id="@+id/msg_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="top"
                android:textSize="@dimen/title_text_size"
                android:padding="@dimen/mini_padding"
                android:background="@drawable/rect_view"
                android:textColor="@color/colormain"
                android:textColorHint="@color/colormain"
                android:hint="@string/hint_message"
                android:inputType="textMultiLine"
                android:imeOptions="actionNext"
                android:minLines="5"
                android:maxLines="5"
                android:layout_margin="@dimen/margin_small"
                />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg_edittext"
                android:layout_gravity="center"
                android:text="@string/action_send_notif"
                android:background="@drawable/bg_button"
                android:padding="@dimen/margin_small"
                android:layout_margin="@dimen/margin_small"
                android:textColor="@color/colormain"
                />

        </LinearLayout>



    </LinearLayout>
    <ProgressBar

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/send_notification_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:fab_size="normal"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_notifications_none_black"
        android:background="@color/colorAccent"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cancel_notification_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:fab_size="normal"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_cancel"/>


    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_account"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_large"
        android:drawableTop="@drawable/ic_account_box_black_24dp"/>

</RelativeLayout>