<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/mini_margin"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/little_margin">

            <TextView

                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/mini_margin"
                android:layout_marginStart="@dimen/big_margin"
                android:textColor="@color/black_54"
                android:textSize="@dimen/small_text_size"
                tools:text="18/04/2017 11:40:58"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:drawablePadding="@dimen/mini_margin"
                android:drawableStart="@drawable/ic_notification"
                android:textColor="@color/colormain"
                android:textSize="@dimen/text_size_big"
                tools:text="Details" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>