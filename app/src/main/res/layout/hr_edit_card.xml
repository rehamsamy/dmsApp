<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99"
        tools:layout_editor_absoluteX="380dp"
        tools:layout_editor_absoluteY="0dp" />


    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp" />


    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearid"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline"
        app:layout_constraintRight_toLeftOf="@+id/vertical_guideline1"
        app:layout_constraintTop_toTopOf="@+id/horizontal_guideline">

        <!-- Search by id layout -->
        <LinearLayout
            android:id="@+id/idcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/fblock1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundedtop"
                    android:gravity="center"
                    android:hint="@string/company"
                    android:inputType="text"
                    android:padding="@dimen/mini_padding"
                    android:layout_margin="@dimen/mini_margin"
                    android:textColor="@color/colormain"
                    android:textColorHint="@color/colormain"
                    android:textSize="@dimen/title_text_size" />


                <EditText
                    android:id="@+id/fblock2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundedtop"
                    android:gravity="center"
                    android:hint="@string/hint_class"
                    android:inputType="text"
                    android:padding="@dimen/mini_padding"
                    android:layout_margin="@dimen/mini_margin"
                    android:textColor="@color/colormain"
                    android:textColorHint="@color/colormain"
                    android:textSize="@dimen/title_text_size"


                    />


                <EditText
                    android:id="@+id/fblock3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundedtop"
                    android:gravity="center"
                    android:hint="@string/emplyee"
                    android:inputType="text"
                    android:padding="@dimen/mini_padding"
                    android:layout_margin="@dimen/mini_margin"
                    android:textColor="@color/colormain"
                    android:textColorHint="@color/colormain"
                    android:textSize="@dimen/title_text_size" />


                <EditText
                    android:id="@+id/fblock4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundedtop"
                    android:gravity="center"
                    android:hint="@string/relation"
                    android:layout_margin="@dimen/mini_margin"
                    android:inputType="text"
                    android:padding="@dimen/mini_padding"
                    android:textColor="@color/colormain"
                    android:textColorHint="@color/colormain"
                    android:textSize="@dimen/title_text_size" />


            </LinearLayout>


                <Button
                    android:id="@+id/search_id"
                    android:text="@string/search"
                    style="@style/material_button"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:layout_marginBottom="10dp"
                    />



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/optionlinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="3.5:0"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline"
        app:layout_constraintRight_toLeftOf="@+id/vertical_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/linearid"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/option"
            android:textColor="@color/colormain"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_rounded_button"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/categoryspinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/title_text_size"
                        android:text="@string/option"
                        android:textColor="@color/colormain"
                        app:ms_arrow_tint="@color/colormain"
                        app:ms_background_color="@color/colorAccent_dark"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="@dimen/max_dropdown_height" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/printlinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="3.5:0"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline"
        app:layout_constraintRight_toLeftOf="@+id/vertical_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/optionlinear"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            android:padding="@dimen/mini_padding"
            android:background="@drawable/gray_rounded_button"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@color/colormain"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/user_name"
                        android:id="@+id/name_tv"/>


                </TableRow>


                <TableRow>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinputCardIdblock1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:textColorHint="@color/colormain">

                        <EditText
                            android:id="@+id/block1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/company"
                            android:inputType="text"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="@color/colormain"
                            android:textSize="@dimen/title_text_size"
                            app:backgroundTint="@color/mdtp_white" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinputCardIdblock2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:textColorHint="@color/colormain">

                        <EditText
                            android:id="@+id/block2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/hint_class"
                            android:inputType="text"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="@color/colormain"
                            android:textSize="@dimen/title_text_size"
                            app:backgroundTint="@color/mdtp_white" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinputCardIdblock3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:textColorHint="@color/colormain">

                        <EditText
                            android:id="@+id/block3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/emplyee"
                            android:inputType="text"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="@color/colormain"
                            android:textSize="@dimen/title_text_size"
                            app:backgroundTint="@color/mdtp_white" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinputCardIdblock4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:textColorHint="@color/colorPrimary">

                        <EditText
                            android:id="@+id/block4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="@string/relation"
                            android:inputType="text"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/title_text_size"
                            app:backgroundTint="@color/mdtp_white" />

                    </android.support.design.widget.TextInputLayout>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date_insurance"
                        android:textColor="@color/colormain"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/start_date"
                        android:textColor="@color/colorAccentyellow"
 />


                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date_insurance"
                        android:textColor="@color/colormain"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/end_date"/>


                </TableRow>


            </TableLayout>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearprintcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
'
                <!-- sadsa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="10dp"
                    android:weightSum="100"
                    android:gravity="center"
                    >

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/reasonspinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="85"
                        android:text="@string/select_reason"
                        android:textSize="@dimen/title_text_size"
                        app:ms_arrow_tint="@color/colormain"
                        android:textColor="@color/colormain"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_background_color="@color/mdtp_white"
                        app:ms_dropdown_max_height="@dimen/max_dropdown_height" />
                    <ImageButton
                        android:visibility="gone"
                        android:layout_margin="@dimen/mini_margin"
                        android:id="@+id/reasonimage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:src="@drawable/ic_camera"
                        android:padding="@dimen/mini_padding"
                        android:background="@drawable/gray_rounded_button"
                        />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/imageurl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/colormain"
                />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearreopen"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tinputdate"
                android:textColorHint="@color/colormain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/reopen_date"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/title_text_size" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearname"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_e_name"
                android:textColorHint="@color/colormain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_e_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/title_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_a_name"
                android:textColorHint="@color/colormain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_a_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/full_name_arab"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/title_text_size" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
          >
            <Button
                style="@style/material_button"
                android:id="@+id/btn_submit"
                android:text="@string/submit"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/linearCode"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/Code"
                    android:textColor="@color/colormain"
                    android:textSize="@dimen/title_text_size"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/codegenerated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/accept_chip"
                    android:textColor="@android:color/white"

                    android:padding="5dp"
                    android:layout_gravity="center"

                    android:text="@string/number"
                    android:textSize="@dimen/title_text_size"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>