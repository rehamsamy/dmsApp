<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/check_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_choose_check_status"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/small_text_size"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <EditText
            android:id="@+id/batch_sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="@string/label_choose_batch"
            android:layout_weight="1"
            android:maxLines="1"
            android:background="@drawable/rect_view"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:padding="8dp"
            android:textSize="@dimen/small_text_size"
            />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button"
            android:layout_gravity="center"
            android:id="@+id/search_button"
            android:src="@drawable/ic_search"
            android:visibility="gone"


            />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:fillViewport="true"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@color/colormain"
                    android:id="@+id/linearheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="@string/no"
                            android:textColor="@color/colorAccentRed"
                            android:textStyle="bold"
                            style="@style/summary_text"
                            android:layout_gravity="center"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/header_linear_etbatchno"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                android:layout_weight="80"
                                android:id="@+id/filter_batch_num"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:background="@color/mdtp_white"
                                android:layout_gravity="center"

                                />
                                <ImageButton
                                    android:layout_weight="20"
                                    android:id="@+id/cancel_filter_batchno"
                                    android:layout_gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_cancel"
                                    />
                                </LinearLayout>

                            <LinearLayout
                                android:id="@+id/header_linear_batchno"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/batch_no_tv"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_batch_no"
                                android:textColor="@color/color_white"
                                android:layout_gravity="center_vertical"
                                />
                                <ImageButton
                                    android:id="@+id/btn_filter_batchno"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_filter_list_"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="100dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/header_linear_etcardid"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                android:layout_weight="80"
                                android:id="@+id/filter_card_id"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:background="@color/mdtp_white"
                                android:layout_gravity="center"

                                />
                                <ImageButton
                                    android:layout_weight="20"
                                    android:id="@+id/cancel_filter_cardid"
                                    android:layout_gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_cancel"
                                    />

                                </LinearLayout>
                            <LinearLayout
                                android:id="@+id/header_linear_cardid"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/Card_id_tv"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_card_id"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center_vertical"

                                />
                                <ImageButton
                                    android:id="@+id/btn_filter_cardid"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_filter_list_"
                                    />

                                </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/header_linear_etclaim"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                android:layout_weight="80"
                                android:id="@+id/filter_claim_no"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:background="@color/mdtp_white"
                                android:layout_gravity="center"

                                />
                                <ImageButton
                                    android:layout_weight="20"
                                    android:id="@+id/cancel_filter_claim"
                                    android:layout_gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_cancel"
                                    />
                                </LinearLayout>


                            <LinearLayout
                                android:id="@+id/header_linear_claim"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/Claim_no"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_claim_no"
                                android:textColor="@android:color/white"
                                />
                                <ImageButton
                                    android:id="@+id/btn_filter_claim"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_filter_list_"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"

                            >
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/header_linear_etdisc"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                android:layout_weight="80"
                                android:id="@+id/filter_disc_code"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:background="@color/mdtp_white"
                                android:layout_gravity="center"

                                />
                                <ImageButton
                                    android:layout_weight="20"
                                    android:id="@+id/cancel_filter_disc"
                                    android:layout_gravity="center"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_cancel"
                                    />
                                </LinearLayout>
                            <LinearLayout
                                android:id="@+id/header_linear_disc"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/Disc_code"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_disc_code"
                                android:textColor="@android:color/white"

                                />
                                <ImageButton
                                    android:id="@+id/btn_filter_disc"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_filter_list_"
                                    />
                        </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/Difference_amt"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_differenceamt"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/Group_name"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_group_name"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >
                            <TextView
                                android:id="@+id/Med_code"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_med_code"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/Med_name"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/med_name"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/Prv_branch_name"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_prv_branch_name"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>



                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="150dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/Prv_branch_num"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/prv_branch_num"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/Prv_no"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_prv_no"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />








                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/System_amt"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_systemamt"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"

                            >

                            <TextView
                                android:id="@+id/Unit"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_unit"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="120dp"
                            android:orientation="vertical"
                            android:layout_gravity="center"

                            >

                            <TextView
                                android:id="@+id/Prv_name"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/label_prv_name"
                                style="@style/summary_text"
                                android:textColor="@android:color/white"

                                />


                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white"/>


                    </LinearLayout>


                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:clickable="true"
                    android:layout_below="@id/linearheader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView"/>
            </RelativeLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@id/progress_bar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emtpy_tv"
            android:layout_gravity="center"
            android:text="@string/empty_batch"
            android:textSize="20sp"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>
    <RelativeLayout
        android:visibility="gone"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50dp"
    app:elevation="4dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/bottomsheet_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/details"
        android:textColor="#FFFFFF"/>
<ImageView
    android:id="@+id/show_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:padding="8dp"/>
        <include layout="@layout/sheet_detail"
            />


</RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>