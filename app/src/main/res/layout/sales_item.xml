<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/small_padding">




            <TextView
                android:id="@+id/sales_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="20153624"
                android:textSize="22sp"
                android:textStyle="bold"/>


        <!--end order container-->



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agent_name"
                android:text="Ahmed"
                android:drawableStart="@drawable/ic_person_black_24dp"
               android:padding="4dp"
                android:textColor="@color/colorTextSubtitle_dark"/>



        <!--start agent phone container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agentMobileContainerId"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agent_phone"
                android:text="01011623541"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/agent_Mobile_icon"
                android:textColor="@color/colorTextSubtitle_dark"
                android:drawableStart="@drawable/ic_phone_android_main_36dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faxNumber"
                android:text="01011623541"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/agent_Mobile_icon"
                android:textColor="@color/colorTextSubtitle_dark"
                android:drawableStart="@drawable/ic_fax"
                android:layout_weight="1"/>



        </LinearLayout>

        <!--end agent phone container-->

        <!--start agent type container-->
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/wait_chip"
            android:text="@string/avialable"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:id="@+id/state_tv"
            android:padding="4dp"
            android:textColor="@color/colorTextSubtitle_light"/>
       </FrameLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/action_layout"
    android:layout_marginBottom="@dimen/normal_margin">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/bg_start_corner_btn"
        android:id="@+id/finish_imgv"
        android:text="@string/action_finish"
        android:textColor="@color/white_color"

        />
    <Button
        android:id="@+id/deactive_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_btn"
        android:text="@string/cancel"
        android:textColor="@color/white_color"

        />
</LinearLayout>
<com.dmsegypt.dms.ux.custom_view.DotLoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading_progress"
            android:layout_gravity="center"
    />
        <!--end agent type container-->

        <!--end agent type container-->
    </LinearLayout>

</android.support.v7.widget.CardView>