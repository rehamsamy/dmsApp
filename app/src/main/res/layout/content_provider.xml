<android.support.v4.widget.NestedScrollView android:id="@+id/activity_provider_scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/activity_provider_scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.dmsegypt.dms.ux.custom_view.freedomSizeView.FreedomTouchView
            android:id="@+id/activity_provider_touchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_provider_dataContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/root_color"
            tools:ignore="UnusedAttribute">

            <RelativeLayout
                android:id="@+id/activity_provider_titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/activity_provider_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:navigationIcon="@drawable/ic_toolbar_back_light"
                    app:popupTheme="@style/PopupMenuTheme" />

                <TextView
                    android:id="@+id/activity_provider_title"
                    style="@style/large_title_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/normal_icon_size"
                    android:layout_marginRight="@dimen/normal_icon_size"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text_size"
                    tools:ignore="RtlHardcoded"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/activity_provider_subtitle"
                    style="@style/subtitle_text"
                    android:layout_below="@id/activity_provider_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:maxLines="1"
                    android:visibility="gone"
                    tools:ignore="RtlHardcoded"
                    tools:text="ON 2016-07-23" />

                <com.dmsegypt.dms.ux.custom_view.CircleImageView
                    android:id="@+id/activity_provider_avatar"
                    android:layout_width="@dimen/large_icon_size"
                    android:layout_height="@dimen/large_icon_size"
                    android:layout_below="@id/activity_provider_subtitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:src="@color/colorAccent"
                    android:stateListAnimator="@animator/touch_rise"
                    android:visibility="gone"
                    app:civ_fill_color="@color/colorTextGrey"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

            <!--<PhotoDownloadView
                                    android:id="@+id/activity_provider_btnBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />-->

            <LinearLayout
                android:id="@+id/activity_provider_btnBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/normal_margin"
                tools:ignore="DisableBaselineAlignment">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnCall"
                        android:layout_width="@dimen/large_icon_size"
                        android:layout_height="@dimen/large_icon_size"
                        android:layout_centerHorizontal="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/normal_margin"
                        android:src="@drawable/ic_call"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/activity_provider_shareTxt"
                        style="@style/subtitle_text"
                        android:layout_below="@id/btnCall"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/normal_margin"
                        android:maxLines="1"
                        android:text="Call"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btnNavigation"
                        android:layout_width="@dimen/large_icon_size"
                        android:layout_height="@dimen/large_icon_size"
                        android:layout_centerHorizontal="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/normal_margin"
                        android:src="@drawable/ic_navigation"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/activity_provider_downloadTxt"
                        style="@style/subtitle_text"
                        android:layout_below="@id/btnNavigation"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/normal_margin"
                        android:maxLines="1"
                        android:text="Navigate"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/btnBookmark"
                        android:layout_width="@dimen/large_icon_size"
                        android:layout_height="@dimen/large_icon_size"
                        android:layout_centerHorizontal="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/normal_margin"
                        android:src="@drawable/ic_star"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/activity_provider_wallTxt"
                        style="@style/subtitle_text"
                        android:layout_below="@id/btnBookmark"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/normal_margin"
                        android:maxLines="1"
                        android:text="Bookmark"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </LinearLayout>

            <com.dmsegypt.dms.ux.custom_view.ProviderDetailsView
                android:id="@+id/activity_provider_detailsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.AppBarLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
