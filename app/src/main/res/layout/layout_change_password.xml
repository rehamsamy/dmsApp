<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutChangePassContainer"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.dmsegypt.dms.ux.custom_view.coordinatorView.StatusBarView
            android:id="@+id/changePassStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone" />

        <com.dmsegypt.dms.ux.custom_view.SwipeBackCoordinatorLayout
            android:id="@+id/changePassSwipeBackView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fillViewport="true">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background">
                    <ImageView
                        android:id="@+id/iBtnCloseBtn"
                        android:layout_margin="@dimen/small_padding"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/mr_dialog_close_light"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/normal_margin">

                        <TextView
                            android:textColor="@color/colormain"
                            style="@style/title_text"
                            android:layout_marginBottom="@dimen/mini_margin"
                            android:layout_marginLeft="@dimen/mini_icon_size"
                            android:layout_marginRight="@dimen/mini_icon_size"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:text="Change Password"
                            android:textSize="@dimen/design_title_text_size"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tinputOldPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colormain"
                            android:layout_marginTop="20dp">

                            <EditText
                                android:id="@+id/etOldPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_old_password"
                                android:inputType="textPassword"
                                android:maxLength="20"
                                android:textSize="@dimen/title_text_size"
                                android:textColor="@color/colormain"
                                android:maxLines="1" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tinputNewPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colormain"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleDrawable="@drawable/ic_visibility_blue_grey_500_24dp"
                            app:passwordToggleTint="@color/colormain"
                            android:layout_marginBottom="20dp">

                            <EditText
                                android:textColor="@color/colormain"
                                android:id="@+id/etNewPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_new_password"
                                android:textSize="@dimen/title_text_size"
                                android:inputType="textPassword"
                                android:maxLength="20"
                                android:maxLines="1"

                                />

                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btnSubmit"
                            style="?android:textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="@dimen/normal_margin"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:background="@drawable/roundedtop"
                            android:textColor="@color/colormain"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.dmsegypt.dms.ux.custom_view.SwipeBackCoordinatorLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>