<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:padding="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            tools:ignore="RtlHardcoded">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/vip_imgv"
                android:src="@drawable/ic_vip"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:text="@string/order_date" />

            <TextView
                android:id="@+id/comp_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vip_imgv"
                android:layout_marginBottom="4dp"
                android:text="@string/companyname"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_order_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comp_name_tv"
                android:text="@string/notes_hint"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

            <RelativeLayout
                android:id="@+id/rel_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_notes"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <RelativeLayout

                    android:id="@+id/linear_location"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_location"
                        android:layout_marginEnd="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_my_location"
                        android:tint="@color/colorAccentyellow" />

                    <TextView
                        android:id="@+id/tv_comp_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@+id/image_location"
                        android:gravity="bottom"
                        android:text="@string/location"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linear_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/linear_location">

                    <ImageView
                        android:id="@+id/image_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person"
                        android:tint="@color/colorAccentyellow"
                        android:layout_marginEnd="4dp"
                        />

                    <TextView
                        android:id="@+id/tv_comp_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@+id/image_person"
                        android:gravity="bottom"
                        android:text="@string/username"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/linear_person">

                    <ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone"
                        android:tint="@color/colorAccentyellow"
                        android:layout_marginEnd="4dp"
                        />

                    <TextView
                        android:id="@+id/tv_comp_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@+id/image_phone"
                        android:gravity="bottom"
                        android:text="@string/contact_phone"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="normal" />
                </RelativeLayout>
            </RelativeLayout>


            <View
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rel_location"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linear_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spacer"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_date"
                    android:layout_marginBottom="4dp"
                    android:text="@string/details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/view_order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_date" />

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@+id/view_order_date"
                        android:text="@string/order_date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/view_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_type" />

                    <TextView
                        android:id="@+id/tv_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@+id/view_order_type"
                        android:text="@string/messenger"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_details">

                <TextView
                    android:id="@+id/button_reasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorAccentyellow"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/reasons"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/mdtp_white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/move_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:background="@color/colorAccentyellow"
                android:contentDescription="@string/type"
                android:gravity="right|center"
                android:padding="@dimen/mini_padding"
                android:text="@string/move"
                android:textColor="@color/mdtp_white"
                android:textSize="@dimen/subtitle_text_size" />

            <ListView
                android:id="@+id/list_reasons"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@id/relLayout1" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>