<HorizontalScrollView android:id="@+id/horizontalView"
    android:fillViewport="true"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal|vertical"
    android:layout_width="wrap_content"
    android:layout_marginTop="5dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/color_batch"
            android:id="@+id/linearheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:id="@+id/header_linear_batchno"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/serv_code"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/service_code"
                        android:textColor="@color/color_white"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/serv_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/name"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"

                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/celling_amount"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"
                    android:id="@+id/celling_amt"

                    />


            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/ceilling_perc"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"
                    android:id="@+id/cielling_pec"

                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/carry_amt"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"
                    android:id="@+id/carry_amt"


                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/notes"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"
                    android:id="@+id/serv_notes"

                    />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/indlist_price"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"
                    android:id="@+id/indlist_price"

                    />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_white"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/indlist_price"
                    style="@style/summary_text_header"
                    android:drawableRight="@null"
                    android:id="@+id/refund_flag"

                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</HorizontalScrollView>
