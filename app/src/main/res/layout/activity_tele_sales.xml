<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg"
    tools:context="com.dmsegypt.dms.ux.activity.SearchTeleSalesActivity">
    <include layout="@layout/header_toolbar"/>
    <LinearLayout
        android:id="@+id/continer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:padding="4dp">




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_below="@id/etSearchText"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"

                        >

                        <EditText
                            android:id="@+id/from_datEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/normal_widget_size"
                            android:layout_weight="2"
                            android:background="@drawable/bg_corner_edit"
                            android:gravity="center"
                            android:hint="@string/from_date"
                            android:textStyle="bold"
                            android:layout_marginEnd="-4dp"
                            android:layout_marginRight="-4dp"
                            android:enabled="false"/>

                        <ImageButton
                            android:layout_width="@dimen/normal_widget_size"
                            android:layout_height="@dimen/normal_widget_size"
                            android:id="@+id/fromDateBtn"
                            android:background="@drawable/bg_corner_btn"
                            android:src="@drawable/ic_date_white_24dp"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_weight="1"

                        >

                        <EditText
                            android:id="@+id/to_dateEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/normal_widget_size"
                            android:layout_weight="2"
                            android:background="@drawable/bg_corner_edit"
                            android:gravity="center"
                            android:hint="@string/to_date"
                            android:textStyle="bold"
                            android:layout_marginEnd="-4dp"
                            android:layout_marginRight="-4dp"
                            android:enabled="false"/>

                        <ImageButton
                            android:layout_width="@dimen/normal_widget_size"
                            android:layout_height="@dimen/normal_widget_size"
                            android:id="@+id/todateBtn"
                            android:background="@drawable/bg_corner_btn"
                            android:src="@drawable/ic_date_white_24dp"/>
                    </LinearLayout>


                </LinearLayout>












                <LinearLayout
                    android:id="@+id/btnsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toDate"
                    android:gravity="center">

                    <Button
                        android:id="@+id/iBtnSearch"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/toContainer"

                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:text="@string/action_filter"
                        android:textColor="@color/black_overlay"

                        />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/teleRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btnsContainer"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"

                android:layoutAnimation="@anim/layout_anim"
                />
           <com.dmsegypt.dms.ux.custom_view.StateView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/state_view"
               android:visibility="gone"

               />
        </FrameLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/iBtnNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/accent"
        app:backgroundTint="@color/accent"
        android:src="@drawable/fab_add"
        android:layout_gravity="end"/>

</RelativeLayout>
