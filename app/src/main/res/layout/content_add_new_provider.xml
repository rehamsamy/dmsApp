<android.support.v4.widget.NestedScrollView android:id="@+id/activity_appBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:theme="@style/ToolbarTheme"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_prov_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/colormain"
                android:layout_weight="1">

                <EditText
                    android:layout_marginTop="16dp"
                    android:id="@+id/et_prov_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textColor="@color/colormain"
                    android:hint="@string/hint_provider_name"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/inputDescription"
                    android:padding="5dp" />
            </android.support.design.widget.TextInputLayout>

        </TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/msType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            app:ms_arrow_tint="@color/colormain"
            android:textColor="@color/colormain"
            android:text="@string/type"
            app:ms_background_color="@color/colorAccent_dark"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="@dimen/max_dropdown_height"
            android:hint="@string/select_type"
            />
</TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/msCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="@string/city"
            app:ms_arrow_tint="@color/colormain"
            android:textColor="@color/colormain"
            app:ms_background_color="@color/colorAccent_dark"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="@dimen/max_dropdown_height"
            android:hint="@string/select_city"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/msArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            app:ms_arrow_tint="@color/colormain"
            android:textColor="@color/colormain"
            android:text="@string/area"
            app:ms_background_color="@color/colorAccent_dark"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="@dimen/max_dropdown_height"
            android:enabled="false"
            android:hint="@string/select_area"/>

</TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/colormain"

            android:layout_weight="1">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:hint="@string/info_address"
                android:textColor="@color/colormain"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="5"
                android:minLines="2"
                android:padding="5dp"
                android:scrollHorizontally="false"
                android:layout_marginTop="16dp"
                />
        </android.support.design.widget.TextInputLayout>
        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:textColorHint="@color/colormain">

            <EditText
                android:id="@+id/et_contact_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:hint="@string/contact_name"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="5"
                android:minLines="2"
                android:textColor="@color/colormain"
                android:padding="5dp"
                android:scrollHorizontally="false"
                android:layout_marginTop="16dp"
                />
        </android.support.design.widget.TextInputLayout>
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:textColorHint="@color/colormain">

            <EditText
                android:id="@+id/et_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:hint="@string/contact_phone"
                android:imeOptions="actionDone"
                android:textColor="@color/colormain"
                android:inputType="phone"
                android:maxLines="5"
                android:minLines="2"
                android:padding="5dp"
                android:scrollHorizontally="false"
                android:layout_marginTop="16dp"
                />
        </android.support.design.widget.TextInputLayout>
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_pop_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:textColorHint="@color/colormain"
>

            <EditText
                android:id="@+id/et_pop_count"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:hint="@string/pop_count"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="5"
                android:minLines="2"
                android:textColor="@color/colormain"
                android:padding="5dp"
                android:scrollHorizontally="false"
                android:layout_marginTop="16dp"
                />
        </android.support.design.widget.TextInputLayout>
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/roundedtop"
            android:padding="16dp"
            android:text="@string/add_provider"
            android:textAllCaps="true"
            android:textColor="@color/colormain"
            android:textStyle="bold"

            />
        <LinearLayout
            android:id="@+id/Codelinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/Code"
                android:textColor="@color/colormain"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/codegenerated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/accept_chip"
                android:padding="5dp"
                android:text="@string/number"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"

                />
        </LinearLayout>

</TableRow>


    </TableLayout>

</android.support.v4.widget.NestedScrollView>
