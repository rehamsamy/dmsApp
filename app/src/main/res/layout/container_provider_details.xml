<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_photo_details_detailsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/huge_margin">




    <TextView
        android:textColor="@color/colormain"
        android:id="@+id/container_photo_details_title"
        style="@style/subtitle_text"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/details"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"
        />

    <FrameLayout
        android:id="@+id/container_photo_details_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvMoreDetails"
        style="@style/content_text"
        android:textSize="@dimen/title_text_size"

        android:layout_below="@id/container_photo_details_title"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="@dimen/normal_margin"
        android:drawableStart="@mipmap/ic_info"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/normal_margin"
        android:textColor="@color/colormain"
        android:visibility="gone"
        tools:text="Some Details is here" />

    <TextView
        android:id="@+id/tvAddress"
        style="@style/content_text"
        android:layout_below="@id/tvMoreDetails"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="@dimen/normal_margin"
        android:drawableStart="@drawable/ic_add_location"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/title_text_size"

        android:padding="@dimen/normal_margin"
        android:textColor="@color/colormain"
        tools:text="Location is anywhere" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/content_text"
        android:layout_below="@id/tvAddress"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="@dimen/normal_margin"
        android:drawableStart="@drawable/ic_mail_outline"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/title_text_size"

        android:padding="@dimen/normal_margin"
        android:textColor="@color/colormain"
        tools:text="any@hospital.com" />

    <TextView
        android:id="@+id/tvPhone"
        style="@style/content_text"
        android:layout_below="@id/tvEmail"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/container_photo_details_center"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="@dimen/normal_margin"
        android:drawableStart="@drawable/ic_call"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/title_text_size"

        android:textColor="@color/colormain"
        android:padding="@dimen/normal_margin"
        tools:text="+20 115264" />

    <TextView
        android:id="@+id/tvType"
        style="@style/content_text"
        android:layout_below="@id/tvEmail"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/container_photo_details_center"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="@dimen/normal_margin"
        android:drawableStart="@drawable/ic_local_hospital"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/normal_margin"
        android:textSize="@dimen/title_text_size"

        android:textColor="@color/colormain"
        tools:text="Hospital" />
</RelativeLayout>