<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="5dp"



    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_margin="4dp"
    android:id="@+id/container"
>



                <TextView
                    android:id="@+id/req_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/little_margin"
                    android:maxLines="1"
                    android:textSize="@dimen/title_text_size"
                    tools:text="type"
                    android:layout_below="@id/req_details"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_button"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    />
    <TextView
        android:id="@+id/req_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/title_text_size"
        tools:text="type"
        android:background="@drawable/bg_button"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/req_details"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorTextSubtitle_dark"/>
    <TextView
        android:id="@+id/show_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/title_text_size"
        android:text="@string/show_reply"
        android:background="@drawable/chip"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/req_state"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_up_white_24dp"
        />


                <TextView
                    android:id="@+id/req_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/little_margin"
                    android:maxLines="1"
                    android:textSize="@dimen/large_title_text_size"
                    tools:text="Title"
                    android:layout_toStartOf="@id/req_date"
                    android:gravity="center"
                    />
        <com.dmsegypt.dms.ux.custom_view.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/req_img"
            android:src="@drawable/no_image"
            app:dependType="y"
            app:dependsOn="@+id/app_bar"
            app:layout_behavior="com.zoonref.SimpleViewBehavior"
            app:riv_border_color="@color/colormain"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            android:layout_below="@+id/req_title"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"

            />



    <TextView
                    android:id="@+id/req_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="@dimen/title_text_size"
                    tools:text="Some Details is dsadsfdsfsdfkjjdsfdbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbddffhlllllllllllsahdskdfggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggglhldfksaafhldksssssssssssdfkhadfahdskhfhere"
                    android:layout_below="@id/req_img"
                    android:textColor="@color/colorTextSubtitle_dark"
        android:padding="8dp"


                    />
                <TextView
                    android:id="@+id/req_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/mini_margin"
                    android:maxLines="2"
                    android:textColor="@color/colorTextSubtitle_dark"
                    android:textSize="@dimen/small_text_size"
                    tools:text="111111"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textStyle="italic"

                    />
</RelativeLayout>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:layout_marginStart="10dp">
<LinearLayout
    android:id="@+id/reply_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/show_reply"
    android:visibility="gone">
    <com.dmsegypt.dms.ux.custom_view.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/no_image"
        android:id="@+id/rep_img"
        app:dependType="y"
        app:layout_behavior="com.zoonref.SimpleViewBehavior"
        app:riv_border_color="@color/colormain"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"

        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetails"
        android:text="@string/username"
        android:padding="8dp"

        />

</LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>