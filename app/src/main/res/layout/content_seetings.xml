<TableLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/little_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TableRow
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:weightSum="2"    >
    <TextView
        android:layout_weight="2"
        android:id="@+id/btnAccount"
        style="@style/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_margin"
        android:text="@string/my_account"
        android:visibility="gone"
         />

</TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine_light"
        android:visibility="gone" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"    >
    <Switch
        android:layout_weight="2"
        android:id="@+id/btnNotificationSwitch"
        style="@style/title_text"
        android:textColor="@color/colormain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_margin"
        android:text="@string/notification" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine_light" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"    >

    <TextView
        android:layout_weight="2"
        android:textColor="@color/colormain"
        android:id="@+id/btnChangePassword"
        style="@style/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_margin"
        android:text="@string/change_password" />
</TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine_light" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:textColor="@color/colormain"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title_text"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:padding="@dimen/normal_margin"
            android:text="@string/change_languague"
            />
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/lang_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_languague"
            app:ms_arrow_tint="@color/colormain"
            android:textColor="@color/colormain"
            app:ms_dropdown_height="wrap_content"
            app:ms_background_color="@color/mdtp_white"
            app:ms_dropdown_max_height="@dimen/max_dropdown_height" />
    </TableRow>
</TableLayout>