<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:id="@+id/llNoResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"

        android:layout_marginStart="10dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_filters"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_layout_height"
            android:baselineAligned="false"
            android:elevation="8dp"
            android:orientation="horizontal">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/msCity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/city"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/colormain"
                app:ms_arrow_tint="@color/colormain"
                app:ms_background_color="@color/colorAccent_dark"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="@dimen/max_dropdown_height" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/msArea"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/area"
                android:textSize="@dimen/title_text_size"
                app:ms_arrow_tint="@color/colormain"
                app:ms_background_color="@color/colorAccent_dark"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="@dimen/max_dropdown_height" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/msType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/type"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/colormain"
                app:ms_arrow_tint="@color/colormain"
                app:ms_background_color="@color/colorAccent_dark"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="@dimen/max_dropdown_height" />



        </LinearLayout>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/sp_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/provider"
            android:elevation="8dp"
            android:textSize="@dimen/title_text_size"
            app:ms_arrow_tint="@color/colormain"
            android:textColor="@color/colormain"
            app:ms_background_color="@color/colorAccent_dark"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="@dimen/max_dropdown_height" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:textColorHint="@color/colormain"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:textColor="@color/colormain"
                android:nextFocusDown="@+id/inputDescription" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColorHint="@color/colormain"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/colormain"
                android:minLines="3"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:background="@drawable/roundedtop"
            android:id="@+id/btn_submit"
            style="@style/material_button"
            android:textColor="@color/colormain"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/normal_icon_size"
            android:textSize="@dimen/title_text_size"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
